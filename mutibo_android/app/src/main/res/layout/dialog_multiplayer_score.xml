<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:orientation="vertical"
              android:background="#ff005b7a"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#ff000000"
        android:layout_margin="1dp"
    >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:text="@string/multi_title_header"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="16dp"
            android:background="#ff005b7a"
        />

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="org.coursera.mutibo.MultiplayerScoreFragment"
            android:id="@+id/scoreFragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/fragment_multiplayer_score"
        />

        <TextView
            android:id="@+id/txtStatus"
            android:text="@string/multi_status"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    </LinearLayout>
</LinearLayout>
